@model banger.Models.Vehicle
 <!--== Page Title Area Start ==-->
<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>@Model.VehicleType</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                   
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>
<!--== Page Title Area End ==-->
<!--== Car List Area Start ==-->
<section id="car-list-area" class="section-padding">
    <div class="container">
        <div class="row">
            <!-- Car List Content Start -->
            <div class="col-lg-8">
                <div class="car-details-content">
                    <h2>@Model.VehicleType <span class="price">Rent: <b>RS: @Model.Amount </b></span></h2>
                    <div class="car-preview-crousel">
                        <div class="single-car-preview">
                            <img src="~/images/@Model.Pic" alt="JSOFT">
                        </div>
                        <div class="single-car-preview">
                            <img src="~/images/@Model.Pic"  alt="JSOFT">
                        </div>
                        <div class="single-car-preview">
                            <img src="~/images/@Model.Pic"  alt="JSOFT">
                        </div>
                    </div>
                    <div class="car-details-info">
                        <h4>Additional Info</h4>
                        <p>@Model.VehicleNo</p>

                        <div class="technical-info">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="tech-info-table">
                                        <table class="table table-bordered">
                                            <tr>
                                                <th>Class</th>
                                                <td>@Model.Class</td>
                                            </tr>
                                            <tr>
                                                <th>Fuel</th>
                                                <td>@Model.FuelType</td>
                                            </tr>
                                            <tr>
                                                <th>Doors</th>
                                                <td>@Model.Doors</td>
                                            </tr>
                                            <tr>
                                                <th>GearBox</th>
                                                <td>@Model.GearBox</td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="tech-info-list">
                                        <ul>
                                            <li>ABS</li>
                                            <li>Air Bags</li>
                                            <li>Bluetooth</li>
                                            <li>Car Kit</li>
                                            <li>GPS</li>
                                            <li>Music</li>
                                            <li>Bluetooth</li>
                                            <li>ABS</li>
                                            <li>GPS</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="review-area">
                          <center>  <h1>Book Now</h1></center>
                            <br>
                           
                            <div class="review-form">
                                <form method="post" enctype="multipart/form-data" asp-controller="vehicle" asp-route-vehicleNo="@Model.VehicleNo" asp-action="bookings">
                                   
                                    <div class="pick-up-date book-item">
                                        <h4>PICK-UP DATE:</h4>
                                        <input name="PickUpDate" id="startDate" type="datetime-local" placeholder="Pick Up Date" />

                                        <div class="return-car">
                                            <h4>Return DATE:</h4>
                                            <input name="ReturnDate" id="endDate" type="datetime-local" placeholder="Return Date" />
                                        </div>
                                    </div>

                                    <div class="choose-car-type book-item">
                                        <h4>CHOOSE Equipment TYPE:</h4>
                                        <select name="Equipment" class="custom-select">
                                            <option selected>Select</option>
                                            @foreach (var addOn in ViewBag.addOn)
                                            {
                                                <option value=@addOn.Equipment>@addOn.Equipment"........RS"@addOn.Amount</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="pick-up-date book-item">
                                        <h4>License No</h4>
                                        <input name="LicenseNo" id="startDate" placeholder="License Number" />


                                    </div>
                                    <div class="return-car">
                                        <h4>Upload Driving Liscens:</h4>
                                        <input name="Pic" type="file">
                                    </div>

                                    <div class="input-submit">
                                        <button type="submit">Book</button>
                                        <button type="reset">Clear</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Car List Content End -->
            <!-- Sidebar Area Start -->
           
            <!-- Sidebar Area End -->
        </div>
    </div>
</section>
<!--== Car List Area End ==-->
