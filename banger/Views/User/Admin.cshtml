@model IEnumerable<banger.Models.WebModel>
@{
    Layout = "AdminLayout";
}


<!-- STATISTIC-->
<section class="statistic statistic2">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-3">
              
                <div class="statistic__item statistic__item--green">
                    <a asp-controller="user" asp-action="ViewUser">
                        <h2 class="number">@ViewBag.customers</h2>
                        <span class="desc">Customers</span>
                        <div class="icon">
                            <i class="zmdi zmdi-account-o"></i>
                        </div>
                    </a>
                </div>

            </div>
            <div class="col-md-6 col-lg-3">
                <div class="statistic__item statistic__item--orange">
                    <a asp-controller="vehicle" asp-action="viewbookings">
                        <h2 class="number">@ViewBag.bookings</h2>
                        <span class="desc">Vehicles Booked</span>
                        <div class="icon">
                            <i class="zmdi zmdi-shopping-cart"></i>
                        </div>
                        </a>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="statistic__item statistic__item--blue">
                    <a asp-controller="vehicle" asp-action="viewvehicle">
                        <h2 class="number">@ViewBag.vehicles</h2>
                        <span class="desc">Vehicles</span>
                        <div class="icon">
                            <i class="zmdi zmdi-calendar-note"></i>
                        </div>
                        </a>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="statistic__item statistic__item--red">
                    <a asp-controller="vehicle" asp-action="ViewAddOns">
                        <h2 class="number">@ViewBag.AddOns</h2>
                        <span class="desc">Add ONs</span>
                        <div class="icon">
                            <i class="zmdi zmdi-money"></i>
                        </div>
                        </a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- END STATISTIC-->


<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-6">
                <!-- MAP DATA-->
                <div class="user-data m-b-40">
                    <h3 class="title-3 m-b-30">
                        <i class="zmdi zmdi-account-calendar"></i>Andrews Car Rental Vehicle data
                    </h3>

                    <div class="table-responsive table-data">
                        <table class="table">
                            <thead>
                                <tr>

                                    <td>name</td>
                                    <td>Price</td>

                                    <td></td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="table-data__info">
                                                <h6>    @Html.DisplayFor(modelItem => item.Vehicle)</h6>

                                            </div>
                                        </td>
                                        <td>
                                            <span class="role user">RS:  @Html.DisplayFor(modelItem => item.Price)</span>
                                        </td>
                                        <td>
                                            <span class="more">
                                                <i class="zmdi zmdi-more"></i>
                                            </span>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
                <!-- END MAP DATA-->
            </div>
            <div class="col-xl-6">
                <!-- MAP DATA-->
                <div class="user-data m-b-40">
                    <h3 class="title-3 m-b-30">
                        <i class="zmdi zmdi-account-calendar"></i>Banger and Co Vehicle data
                    </h3>

                    <div class="table-responsive table-data">
                        <table class="table">
                            <thead>
                                <tr>

                                    <td>name</td>
                                    <td>Price</td>

                                    <td></td>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var vehicle in ViewBag.Vehicle)
                                {
                                    <tr>
                                        <td>
                                            <div class="table-data__info">
                                                <h6>    @vehicle.VehicleType</h6>

                                            </div>
                                        </td>
                                        <td>
                                            <span class="role admin"> RS:  @vehicle.Amount</span>
                                        </td>
                                        <td>
                                            <span class="more">
                                                <i class="zmdi zmdi-more"></i>
                                            </span>
                                        </td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>

                </div>
                <!-- END MAP DATA-->
            </div>
        </div>
    </div>
</div>
