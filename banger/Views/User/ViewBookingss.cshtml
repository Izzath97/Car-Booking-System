@model IEnumerable<banger.Models.Bookings>
@{
    Layout = "_Layout";
}

<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>My Bookings</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p>Banger and Co Bookings</p>
                    <h2>No Bookings</h2>
                    <h2>No Bookings</h2>
                    <h2>No Bookings</h2>
                    <h2>No Bookings</h2>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>


@{

    if (Model.Count() == 0)
    {
        <div class="section-title  text-center">
            <br>
            <h2>No Bookings</h2>
            <span class="title-line"><i class="fa fa-car"></i></span>
            <a asp-controller="vehicle" asp-action="cars">  <p>Book Now</p></a>
        </div>


    }

    else
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BookingID)
                    </th>
                    <th>  @Html.DisplayNameFor(model => model.BookingStatus)</th>
                    <th>  @Html.DisplayNameFor(model => model.PickUpDate)</th>
                    <th>  @Html.DisplayNameFor(model => model.ReturnDate)</th>
                    <th>  @Html.DisplayNameFor(model => model.VehicleNo)</th>
                    <th>  @Html.DisplayNameFor(model => model.Email)</th>
                    <th>  @Html.DisplayNameFor(model => model.Equipment)</th>
                    <th>
                        Delete
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookingID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookingStatus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PickUpDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReturnDate)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.VehicleNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Equipment)
                        </td>

                        <td>
                            <a asp-action="DeleteBooking" asp-route-id="@item.BookingID" class="text-danger ml-1" onclick="return confirm('Are you sure to delete this record?')"><i class="fa fa-trash-alt fa-lg"></i>Cancel Booking</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>


    }

}

<div class="col-lg-12">
    <div class="section-title  text-center">
        <h2>My Bookings History</h2>
        <span class="title-line"><i class="fa fa-car"></i></span>

    </div>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookingID)
            </th>

            <th>  @Html.DisplayNameFor(model => model.PickUpDate)</th>
            <th>  @Html.DisplayNameFor(model => model.ReturnDate)</th>
            <th>  @Html.DisplayNameFor(model => model.VehicleNo)</th>
            <th>  @Html.DisplayNameFor(model => model.Email)</th>
            <th>  @Html.DisplayNameFor(model => model.Equipment)</th>
            <th>  @Html.DisplayNameFor(model => model.Amount)</th>

        </tr>
    </thead>
    <tbody>
        @foreach (Bookings bookings in ViewBag.booking)
        {
            <tr>
                <td>
                    @bookings.BookingID
                </td>

                <td>
                    @bookings.PickUpDate
                </td>
                <td>
                    @bookings.ReturnDate
                </td>

                <td>
                    @bookings.VehicleNo
                </td>
                <td>
                    @bookings.LicenseNo
                </td>
                <td>
                    @bookings.Equipment
                </td>
                <td>
                    @bookings.Amount
                </td>

            </tr>
        }
    </tbody>
</table>