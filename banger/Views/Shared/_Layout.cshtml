    <link rel="shortcut icon" href="~/Content/favicon.ico" type="image/x-icon" />

    <title>Banger</title>
    <!--=== Bootstrap CSS ===-->
    <link href="@Url.Content("~/Content/assets/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <!--=== Slicknav CSS ===-->
    <link href="@Url.Content("~/Content/assets/css/plugins/slicknav.min.css")" type="text/css" rel="stylesheet" />
    <!--=== Magnific Popup CSS ===-->
    <link href="@Url.Content("~/Content/assets/css/plugins/magnific-popup.css")" rel="stylesheet" type="text/css" />
