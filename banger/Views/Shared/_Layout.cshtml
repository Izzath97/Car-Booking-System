    <style>
        .alert {
            padding: 10px;
            background-color: #f44336;
            color: white;
        }

        .closebtn {
            margin-left: 15px;
            color: white;
            font-weight: bold;
            float: right;
            font-size: 22px;
            line-height: 20px;
            cursor: pointer;
            transition: 0.3s;
        }

            .closebtn:hover {
                color: black;
            }
    </style>s

</head>

<body class="loader-active">

    <!--== Preloader Area Start ==-->

    <!--== Preloader Area End ==-->
    <!--== Header Area Start ==-->
    <header id="header-area" class="fixed-top">
        <!--== Header Top Start ==-->
        <div id="header-top" class="d-none d-xl-block">
            <div class="container">
                <div class="row">
                    <!--== Single HeaderTop Start ==-->
                    <div class="col-lg-3 text-left">
                        <i class="fa fa-map-marker"></i> APIIT SRI LANKA
                    </div>


                    <!--== Single HeaderTop End ==-->
                    <!--== Single HeaderTop Start ==-->
                    <div class="col-lg-3 text-center">
                        <i class="fa fa-mobile"></i> +94 776307850
                    </div>
                    <!--== Single HeaderTop End ==-->
                    <!--== Single HeaderTop Start ==-->
                    <div class="col-lg-3 text-center">
                        <i class="fa fa-clock-o"></i> Mon-Fri 09.00 - 17.00
                    </div>
                    <!--== Single HeaderTop End ==-->
                    <!--== Social Icons Start ==-->
                    @if (Context.Session.GetString("email") != null)
                    {
                        <div class="col-lg-3 text-right">
                            <div class="header-social-icons">
                                <a><i>@Context.Session.GetString("email")</i></a>
                                <a asp-controller="user" asp-action="logOut"><i>Logout</i></a>

                            </div>
                        </div>

                    }
                    else
                    {
                        <div class="col-lg-3 text-right">
                            <div class="header-social-icons">
                                <a asp-controller="user" asp-action="register"><i>Sign Up</i></a>
                                <a asp-controller="user" asp-action="login"><i>Sign IN</i></a>

                            </div>
                        </div>
                    }

                    <!--== Social Icons End ==-->
                </div>
            </div>
        </div>
        <!--== Header Top End ==-->
        <!--== Header Bottom Start ==-->
        <div id="header-bottom">
            <div class="container">
                <div class="row">
                    <!--== Logo Start ==-->
                    <div class="col-lg-4">
                        <a href="index.html" class="logo">

                            <img src="~/Content/assets/img/logo.png" alt="JSOFT">
                        </a>
                    </div>
                    <!--== Logo End ==-->
                    <!--== Main Menu Start ==-->
                    <div class="col-lg-8 d-none d-xl-block">
                        <nav class="mainmenu alignright">
                            <ul>
                                <li>
                                    <a asp-controller="user" asp-action="home">Home</a>

                                </li>
                                <li><a asp-controller="user" asp-action="about">About</a></li>
                                <li><a asp-controller="user" asp-action="service">services</a></li>
                                <li>
                                    <a asp-controller="vehicle" asp-action="cars">Cars</a>

                                </li>
                               
                                @if (Context.Session.GetString("email") != null)
                                {
                                    <li class="active">
                                        <a asp-controller="user" asp-action="viewBookings">My Bookings</a>

                                    </li>
                                    <li class="active">
                                        <a asp-controller="user" asp-action="profile">Profile</a>

                                    </li>
                                }
                                <li><a asp-controller="vehicle" asp-action="contacts">Contact</a></li>
                            </ul>
                        </nav>
                    </div>
                    <!--== Main Menu End ==-->
                </div>
            </div>
        </div>
        <!--== Header Bottom End ==-->
    </header>
    <!--== Header Area End ==-->
    <!--== Page Title Area Start ==-->

    <div>
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!--== Page Title Area End ==-->
    <!--== Footer Area Start ==-->
